@model MVC_PRACTICAL.Models.InternClass
@{
    ViewData["Title"] = "Add New Intern";
}
<!-- Bootstrap CSS -->
@* <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> *@


<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<!-- Bootstrap JS -->
@* <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script> *@

@if(TempData["alertMessage"] != null){
   <script type="text/javascript">
       alert('@TempData["alertMessage"]');
       @TempData["alertMessage"] = "";
    </script>
}

<h1>Add New Intern</h1>
<br />
<h5><a asp-action="GetAllInterns" class="btn btn-outline-primary">List Of Interns</a></h5>
<br />

<form asp-action="Insert" enctype="multipart/form-data">
    <div asp-validation-summary="All">


    </div>
    <div class="form-group">
        <label asp-for="InternName"></label>
        <input type="text" asp-for="InternName" class="form-control" placeholder="Enter Your Name" />
        <span asp-validation-for="InternName" class="text-danger"></span>
    </div>


   <div class="form-group">
    <label asp-for="Gender" class="control-label col-md-2"></label>
    <div class="col-md-10">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Gender" value="M" />
            <label class="form-check-label" for="Male">Male</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Gender" value="F" />
            <label class="form-check-label" for="Female">Female</label>
        </div>
       
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
</div>




    <div class="form-group">
        <label asp-for="TopicId"></label>
        <select asp-for="TopicId" class="form-control">
            <option value="">Select Topic</option>
            @foreach (var topic in ViewBag.Topics)
            {
                <option value="@topic.TopicId">@topic.TopicName</option>
            }
        </select>
        <span asp-validation-for="AssignedTopic!.TopicName" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="DateOfPresentation"></label>
        <input asp-for="DateOfPresentation" class="form-control" type="date" placeholder="Enter Topic Name" />
        <span asp-validation-for="DateOfPresentation" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" type="checkbox" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="TopicImageFile"></label>
        <input asp-for="TopicImageFile" type="file" class="form-control" />
        <span asp-validation-for="TopicImageFile" class="text-danger"></span>
    </div>


   


    <button type="submit" class="btn btn-primary">Add Intern</button>
    @* <a asp-action="GetAllInterns" class="btn btn-secondary">Cancel</a> *@
</form>
