@model LoginClass
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>


    <h1>Login</h1>

    <form asp-action="login">

        <div>
            <label for="">Email</label>
            <input type="text" class="form-control" asp-for="@Model.email" id="">
        </div>

        <div>
            <label for="">Password</label>
            <input type="password" class="form-control" asp-for="@Model.password" id="">
        </div>
        <br>

        <button type="submit" class="form-control btn btn-dark">submit</button>


    </form>

</body>

</html>