@model AddShoesClass

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>

<body>
    <h1>add shoes</h1>

    <form asp-action="insertdata" style="display: flex; flex-direction: column; gap: 0.6rem;" enctype="multipart/form-data">

        <div asp-validation-summary="All" style=" color: red;"></div>
        <div>
            <label for="">Shoes Name</label>
            <input type="text" asp-for="c_name" id="name" class="form-control" placeholder="Enter the Name">
            <span asp-validation-for="c_name"></span>
        </div>

        <div>
            <label for="ProductSize">Product Size</label>
            <input type="number" asp-for="c_size" class="form-control" id="size" max="12" min="6"
                placeholder="enter size 6 to 12">
            <span asp-validation-for="c_size"></span>
        </div>

        <div>
            <label for="">Product Color</label>
            <br>
            <label for="">Red</label>
            <input type="checkbox" name="color" value="Red">
            <label for="">Blue</label>
            <input type="checkbox" name="color" value="Blue">
            <label for="">Pink</label>
            <input type="checkbox" name="color" value="Pink">
            <label for="">Orange</label>
            <input type="checkbox" name="color" value="Orange">
            <br>
            <span asp-validation-for="c_color"></span>
        </div>

        <div>
            <label for="">Product Qty</label>
            <input type="number" class="form-control" asp-for="c_qty" id="qty" min="1" placeholder="Enter the Qty">
            <span asp-validation-for="c_qty"></span>
        </div>

        <div>
            <label for="">Shoes For</label>
            <br>
            <label for="">Men</label>
            <input type="radio" asp-for="c_gender" id="men" value="Men">
            <label for="">Women</label>
            <input type="radio" asp-for="c_gender" id="women" value="Women">
            <br>
            <span asp-validation-for="c_gender"></span>
        </div>

        <div>
            <label for="">Product Price</label>
            <input type="number" class="form-control" asp-for="c_price" id="price" min="500"
                placeholder="Enter the Price Min 500">
            <span asp-validation-for="c_price"></span>
        </div>


        <div>
            <label for="">Select Shoes Brand</label>
            <select asp-for="c_bid" class="form-control" id="brand">
                <option value="">select Brand</option>
                @foreach (BrandClass brand in ViewBag.brand)
                {
                    <option value="@brand.c_bid">@brand.c_bname</option>
                }
            </select>
            <span asp-validation-for="c_bid"></span>
        </div>
        <div>
            <label for="">Select Date</label>
            <input type="date" class="form-control" asp-for="c_date" id="c_date">
            <span asp-validation-for="c_date"></span>
        </div>
        <div>
            <label for="">Uplode Shoes Image</label><br>
            <input type="file" asp-for="img" id="img" name="img"><br>
            <span asp-validation-for="img"></span>
        </div>

        <br>
        <input type="submit" value="submit" class="btn btn-dark">

    </form>
</body>

</html>